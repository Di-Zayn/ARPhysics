/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.banner {
  width: 100%;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

input {
  width: 80%;
  border: 1px solid #d6d6d6;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border-radius: 40rpx;
  height: 80rpx;
}
.ui-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ui-drawer {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 75%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  z-index: 98;
}
.ui-h3 {
  color: #333;
  font-size: 36rpx;
}
.ui-info-row {
  border-bottom: 1px solid #f7f7f7;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items: center;
  font-size: 30rpx;
  line-height: 3;
}
.ui-info-row .label {
  text-align: right;
  width: 20%;

  color: #464646;
}
.ui-info-row .value {
  width: 78%;
  margin-left: 2%;
}
.ui-hover {
  background-color: #fef9f9 !important;
}

page {
  background: #eef4fd;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
