page {
  height: 100%;
}
.entry {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.entry button {
  width: 400rpx;
  height: 72rpx;
  background-color: #fff;
  font-weight: normal;
  color: #333;
  border: 1px solid #ddd;
  margin-bottom: 80rpx;
  font-size: 28rpx;
}
.content {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
canvas {
  width: 300px;
  height: 420px;
  border: 1px solid #ddd;
}
.content icon {
  position: absolute;
  top: 10px;
  right: 10px;
}
.bar {
  width: 300px;
  margin: 20px auto 0;
}
.bar .slider-item {
  margin-bottom: 10px;
  display: flex;
  border-bottom: 1px dashed #ddd;
  align-items: center;
}
.bar .slider-item:last-child {
  border: 0;
}
.bar .slider-item text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-right: 16px;
  line-height: 20px;
  /* vertical-align: middle; */
}
.bar .slider-item slider {
  flex: 1;
}
.sup-text {
  font-weight: normal;
  font-size: 20rpx;
  color: #333;
  margin-left: -16px;
}
.bar .slider-item .lastText {
  margin-left: -7px;
}
